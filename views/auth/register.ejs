<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="/static/css/_main.css">
    <title>Inventario</title>
</head>
<body>
    <header>
        <% if (typeof errors != 'undefined') { %>
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>   
            </ul>
        <% } %>   
        <div class="register-container" id="register-container">
            <form action="/register" id="register-form" method="POST">
                <div class="register-form__logo-container">
                    <div class="register-form__logo">
                        <i class="fas fa-user-circle"></i>
                    </div>
                </div>
                <input type="file" name="logo" id="register-form__logo-input">
                <input type="text" name="name" id="register-form__name" 
                    placeholder="Nombre" autocomplete="off" minlength="3" maxlength="50" 
                    required>
                <input type="text" name="surname" id="register-form__surname" 
                    placeholder="Apellido" autocomplete="off" minlength="2" maxlength="50" 
                    required>
                <input type="email" name="email" id="register-form__email" 
                    placeholder="Email" autocomplete="off" minlength="7" 
                    maxlength="150" required>
                <input type="text" name="username" id="register-form__username" 
                    placeholder="Nombre de Usuario" autocomplete="off" 
                    minlength="3" maxlength="50" required>
                <input type="password" name="password" id="register-form__password" 
                    placeholder="Contraseña" autocomplete="off" minlength="8" 
                    maxlength="50" required>
                <div id="register-form__terms">
                    Al hacer clic en Ingresar, está aceptando nuestro
                    Acuerdo de Suscripción y nuestra Política de Privacidad
                </div>
                <input type="submit" value="Ingresar" id="register-form__access">
            </form>
        </div>

        <!-- <script src="/static/js/main.js"></script> -->
</body>
</html>